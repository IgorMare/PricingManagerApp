@model IEnumerable<QPricingManager.Core.Entities.PricingUnit>

@{
    ViewBag.Title = "Index";
}
<div class="col-sm-6"></div>
<div class="panel panel-primary panel-no-borders">
    <div class="panel-heading"> Index</div>
    <table class="table table-striped table-shadow">
        <caption class="butn-create-new">
            <a class="btn btn-default pull-left" href="@Url.Action("Create", "PricingUnit")"><i class="glyphicon glyphicon-pencil"></i><span>&nbsp;Create new</span></a>
        </caption>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PricingItem.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricingTier.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Multiplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsIncluded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricingUnitType)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PricingItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricingTier.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Multiplier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsIncluded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricingUnitType)
                </td>
                <td>
                    <div>
                        @Html.ActionLink("\n", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove btn btn-default pull-right" })

                        @Html.ActionLink("\n", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-list-alt btn btn-default pull-right" })

                        @Html.ActionLink("\n", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit btn btn-default pull-right" })
                    </div>
                </td>
            </tr>
        }
    </table>
</div>