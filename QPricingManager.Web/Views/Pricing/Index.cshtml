@model IEnumerable<QPricingManager.Core.Entities.Pricing>

@{
    ViewBag.Title = "Index";
}
<div class="col-lg-12">
    <div class="panel panel-primary panel-no-borders">
        <div class="panel-heading"> Index</div>
        <table class="table table-striped">
            <caption>
                <a class="btn btn-default pull-left" href="@Url.Action("Create", "Pricing")"><i class="glyphicon glyphicon-pencil"></i><span>&nbsp;Create new</span></a>
                <a class="btn btn-default pull-right" href="@Url.Action("PricingIndexExcelExport", "Pricing")"><i class="glyphicon glyphicon-download-alt"></i><span>&nbsp;Export to Excel</span></a>
            </caption>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <div>
                            @Html.ActionLink("\n", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove btn btn-default pull-right" })
                            @Html.ActionLink("\n", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-list-alt btn btn-default pull-right" })
                            @Html.ActionLink("\n", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit btn btn-default pull-right" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>